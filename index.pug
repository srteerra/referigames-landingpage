doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Referigames
    body
        div(class='bg__image')
            img(src="", alt="background")
        header 
            div 
                img(src="/", alt="Logo")
            nav 
                ul 
                    li Inicio
                    li Conocenos
                    li Galeria
                    li Contacto
        main(class='head__container')
            div(class='head__info')
                h1 Title
            div(class='head__form')
                form(action="", method="POST")
                    div(class='form__title')
                        h2 Subscribe!
                    div(class='form__content')
                        p Level 1 
                        input(type="text" name='level-1')
                        p Level 2
                        input(type="text" name='level-2')
                        p Level 3 
                        input(type="text" name='level-3')
                    div(class='form__extra')
                        input(type="checkbox", name="lvl")
                        p Accept terms and conditions
                    div(class='form__submit')
                        input(type="button", value="Submit")